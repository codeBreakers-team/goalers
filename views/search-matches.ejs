<!DOCTYPE html>
<html lang="en">

<head>
    <%- include( 'partials/head') %>
        <link rel="stylesheet" href="styles/searchMatchesStyle.css" />
</head>

<body>
    <header>
        <%- include('partials/header') %>

    </header>


    <main>



        <ul id="searchCategoryUl">
            <li id="searchCategoryLabel" class="searchCategoryLi">Search By</li>
            <div>
                <li id="searchCategoryCountry" class="searchCategoryLi">Country</li>
                <form id="countrySearchForm" action="/searchplayer">
                    <label id="countryLabel" for="countryInputText">Country</label><br>
                    <input type="text" id="countryInputText" name="country" value=""><br>
                    <input id="searchButton" type="submit" value="Search">
                </form>
            </div>
            <li id="searchCategoryTeam" class="searchCategoryLi">Team</li>
            <li id="searchCategoryPlayer" class="searchCategoryLi">Player</li>
            <li id="searchCategoryLeague" class="searchCategoryLi">League</li>
        </ul>




        <%       
        if (typeof(player)=='undefined') { %>

            <%} else { %>

                <div id="playerInfoDiv">
                    <div id="imageAndInfoDiv">
                        <img id="playerImage" src="<%= player.strThumb %>" alt="">
                        <div id=playerBreifInfoDiv>
                            <h1>
                                <%= player.strPlayer %>
                            </h1>
                            <h3>Nationality:
                                <%= player.strNationality %>
                            </h3>
                            <h3>Teams:
                                <%= player.strTeam  %>,
                                    <%= player.strTeam2  %>
                            </h3>
                            <h3>Born Date:
                                <%= player.dateBorn %>
                            </h3>
                            <h3>Gender:
                                <%= player.strGender %>
                            </h3>
                            <h3>Side:
                                <%= player.strSide %>
                            </h3>
                            <h3>Position:
                                <%= player.strPosition %>
                            </h3>
                            <h3>Facebook:
                                <%= player.strFacebook %>
                            </h3>
                            <h3>Height:
                                <%= player.strHeight %>
                            </h3>
                            <h3>Weight :
                                <%= player.strWeight %>
                            </h3>
                        </div>
                    </div>
                    <p id="playerDescription">
                        <%= player.strDescriptionEN %>
                    </p>
                </div>
                <% } %>






    </main>

    <footer>

    </footer>





</body>

</html>