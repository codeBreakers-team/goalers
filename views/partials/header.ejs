<header>
  <div id="logo">
    <a href="/"
      ><img src="/images/goalers2.png" alt="Goalers" class="logo" />
    </a>
  </div>
  <div class="wrapper">
    <nav>
      <a href="/" class="computerLinks"><i class="fas fa-house-user"></i> HOME</a>
      <a href="#" class="computerLinks"><i class="fas fa-users"></i> TEAMS</a>
      <a href="/player" class="computerLinks"><i class="fas fa-running"></i> PLAYERS</a>
      <a href="/about-us" class="computerLinks"><i class="fas fa-address-card"></i> ABOUT</a>
      <div class="dropdown">
        <a href="#"
          ><i class="fas fa-user-circle" style="font-size: 35px;"></i
        ></a>
        <div class="dropdown-content">
          <a href="#" onclick="openForm()">Log in</a>
          <a href="#" onclick="openSignForm()">Sign up</a>
        </div>
      </div>

      <div id="burgerLinks">
        <a href="/" class="mobileLinks"><i class="fas fa-house-user"></i> HOME</a>
        <a href="" class="mobileLinks"><i class="fas fa-users"></i> MATCHES</a>
        <a href="/player" class="mobileLinks"><i class="fas fa-running"></i> PLAYERS</a>
        <a href="/about-us" class="mobileLinks"><i class="fas fa-address-card"></i> ABOUT</a>
      </div>
      <a href="javascript:void(0);" class="burgerIcon" style="font-size: 35px;" onclick="burgerFuntion()">
        <i class="fa fa-bars"></i>
      </a>
    </nav>

    <div class="form-popup" id="loginForm">
      <form action="/" class="form-container">
        <h1>Login</h1>
        <br /><br /><br />

        <br /><label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" required />

        <label for="psw"><b>Password</b></label>
        <input
          type="password"
          placeholder="Enter Password"
          name="psw"
          required
        />

        <button type="submit" class="btn">Login</button>
        <button type="button" class="btn cancel" onclick="closeForm()">
          Close
        </button>
      </form>
    </div>

    <div class="form-popup" id="signUpForm">
      <form action="/" class="form-container">
        <h1>Sign up</h1>
        <br /><br /><br /><br />

        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" required />

        <label for="psw"><b>Password</b></label>
        <input
          type="password"
          placeholder="Enter Password"
          name="psw"
          required
        />

        <button type="submit" class="btn">Sign up</button>
        <button type="button" class="btn cancel" onclick="closeSignForm()">
          Close
        </button>
      </form>
    </div>
  </div>
</header>

<script>
  function openForm() {
    document.getElementById("loginForm").style.display = "block";
    document.getElementById("signUpForm").style.display = "none";
  }

  function closeForm() {
    document.getElementById("loginForm").style.display = "none";
  }
  function openSignForm() {
    document.getElementById("signUpForm").style.display = "block";
    document.getElementById("loginForm").style.display = "none";
  }

  function closeSignForm() {
    document.getElementById("signUpForm").style.display = "none";
  }

  function burgerFuntion() {
    var burgerLinks = document.getElementById("burgerLinks");
    if (burgerLinks.style.display === "block") {
      burgerLinks.style.display = "none";
    } else {
      burgerLinks.style.display = "block";
    }
  }
</script>
