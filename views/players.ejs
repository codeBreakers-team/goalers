<!DOCTYPE html>
<html lang="en">

<head>
    <%- include( 'partials/head') %>
        <link rel="stylesheet" href="styles/playerPageStyle.css" />
        <link rel="stylesheet" href="styles/sideNav.css">
</head>

<body>

        <%- include('partials/header') %>


    <%- include('partials/sideNav') %>

        <main>


            <form id="playerSearchForm" action="/searchplayer">
                <label id="playerNameLabel" for="playerName">Player Name</label><br>
                <input type="text" id="playerNameInputText" name="playerName" value=""><br>
                <input id="searchButton" type="submit" value="Search">
            </form>

            <%       
        if (typeof(players)=='undefined') { %>
                <h1>undefined</h1>
                <%} else { %>
                    <h1>defined</h1>
                    <% players.forEach (player => {  %>
                        <div id="playerInfoDiv">
                            <div class="imageAndInfoDiv">
                                <img class="playerImage" src="<%= player.strThumb %>" alt="">
                                <div class=playerBreifInfoDiv>
                                    <h1>
                                        <%= player.strPlayer %>
                                    </h1>
                                    <h3>Nationality:
                                        <%= player.strNationality %>
                                    </h3>
                                    <h3>Teams:
                                        <%= player.strTeam  %>,
                                            <%= player.strTeam2  %>
                                    </h3>
                                    <h3>Born Date:
                                        <%= player.dateBorn %>
                                    </h3>
                                    <h3>Gender:
                                        <%= player.strGender %>
                                    </h3>
                                    <h3>Side:
                                        <%= player.strSide %>
                                    </h3>
                                    <h3>Position:
                                        <%= player.strPosition %>
                                    </h3>
                                    <h3>Height:
                                        <%= player.strHeight %>
                                    </h3>
                                    <h3>Weight :
                                        <%= player.strWeight %>
                                    </h3>

                                </div>
                            </div>

                        </div>

                        <% }) %>

                            <% } %>






        </main>

        <footer>
            <%- include('partials/footer') %>
        </footer>





</body>

</html>