<!DOCTYPE html>
<html lang="en">

<head>
    

   <-- <%- include('partials/head') %>  -->
   <!-- <link rel="stylesheet" href="styles/index.css"> -->
</head>

<body>

        <%- include('partials/header') %>

    <main>
        <!--  -->
        <!--  -->
        <img src="/images/football.jpg" alt="football" id="football">
        <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <% latestMatches.forEach((match, i) => { %>
            <div class="mySlides fade">
                <div class="over"></div>
                <img src="<%= match.thumbnail %>"
                    style="width: 100%;" />
                <div class="text">
                    <h2></h2>
                    <p>
                        <%= match.team1 %> vs <%= match.team2 %>
                    </p>
                    <button class="watch watch-<%- i %>">watch video</button>
                </div>
            </div>
            
            <%  })  %>
            
        </div>
        <br>
        <div style="text-align:center">
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
        <!-- iframes -->
        <% latestMatches.forEach((match, i) => { %>
        <div style="display: none;" class="matchEmbed watch-<%- i %>"><%- match.embed %></div>


        <%  })  %>


        <br /> <br /> <br /> <br />
        <p>--------------------------------------------------------------------------------------------------</p>


        <!-- end of iframes -->
        <!--  -->
        <% Object.entries(leagues).forEach((leagueDataArr, i) => { %>
            <h2 style="color: red;border: 5px solid brown; margin-bottom: 20px;"> <%= leagueDataArr[0] %></h4>
                
                <% leagueDataArr[1].forEach(matchData => { %>
                    <p style="color: black;"> <%= matchData.matchName %> </p>
                    <p style="color: black;">result: <%= matchData.homeTeamScore%> : <%= matchData.awayTeamScore %> </p>

               <% }) %>

            
            <%  })  %>
        <!--  -->


    </main>
    <%- include('partials/footer') %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="js/app.js"></script>


</body>

</html>